<div class="container">
  <div class="row">
    <div class="col-md-12">
      <%= render partial: 'guests/leader' %>
      <%= render partial: 'guests/rsvp_nav', locals: { active: 2 } %>

      <h2>Andere gasten</h2>
      <p>Staan er meerdere mensen op je uitnodiging? Laat dan hier weten of zij met je meekomen.

      <% if @plus_ones.any? %>
        <%= render @plus_ones %>
      <% else %>
      <% end %>
      <p>
        <%= link_to 'Voeg iemand toe', new_guest_plus_one_path(@guest), class: 'btn btn-primary', data: { disable_with: 'Loading...' } %>
      </p>

      <p>&nbsp;</p>
      <p class="guests-buttons">
        <%= link_to 'Verder', confirm_guest_path(@guest), class: 'btn btn-primary' %>
      </p>
    </div>
  </div>
</div>
